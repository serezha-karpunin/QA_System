<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="db.entities.AnswersEntity" table="answers" schema="epamproject">
        <id name="idAnswer">
            <column name="id_answer" sql-type="int(11)"/>
            <generator class="identity"/>
        </id>
        <property name="login">
            <column name="login" sql-type="varchar(15)" length="15"/>
        </property>
        <property name="textAnswer">
            <column name="text_answer" sql-type="varchar(500)" length="15"/>
        </property>
        <property name="dateAnswer">
            <column name="date_answer" sql-type="datetime"/>
        </property>
    </class>
</hibernate-mapping>