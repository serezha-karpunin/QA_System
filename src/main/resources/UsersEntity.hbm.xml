<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="db.entities.UsersEntity" table="users" schema="epamproject">
        <id name="login">
            <column name="login" sql-type="varchar(15)" length="15"/>
        </id>
        <property name="email">
            <column name="email" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="password">
            <column name="password" sql-type="varchar(45)" length="45"/>
        </property>
        <property name="registrationDate">
            <column name="registration_date" sql-type="datetime"/>
        </property>
        <property name="questionCount">
            <column name="question_count" sql-type="int(11)"/>
        </property>
        <property name="answerCount">
            <column name="answer_count" sql-type="int(11)"/>
        </property>
        <property name="lang">
            <column name="lang" sql-type="varchar(15)" length="15"/>
        </property>
    </class>
</hibernate-mapping>