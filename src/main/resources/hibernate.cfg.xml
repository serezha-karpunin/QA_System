<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="connection.url">jdbc:mysql://localhost:3306/epamproject</property>
        <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="connection.password">root</property>
        <property name="connection.username">root</property>
        <mapping resource="UsersEntity.hbm.xml"/>
        <mapping class="db.entities.UsersEntity"/>

        <mapping resource="QuestionsEntity.hbm.xml"/>
        <mapping class="db.entities.QuestionsEntity"/>

        <mapping resource="AnswersEntity.hbm.xml"/>
        <mapping class="db.entities.AnswersEntity"/>

        <mapping resource="QaLinksEntity.hbm.xml"/>
        <mapping class="db.entities.QaLinksEntity"/>

        <mapping resource="TagsEntity.hbm.xml"/>
        <mapping class="db.entities.TagsEntity"/>

        <mapping resource="LikesEntity.hbm.xml"/>
        <mapping class="db.entities.LikesEntity"/>
        <mapping resource="UsersEntity.hbm.xml"/>
        <mapping resource="UsersEntity.hbm.xml"/>


        <!-- DB schema will be updated if needed -->
        <!-- <property name="hbm2ddl.auto">update</property> -->
    </session-factory>
</hibernate-configuration>